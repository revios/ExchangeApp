<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SwitchCompatTheme">
        <item name="android:colorForeground">#F00</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="switchNotification">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:theme">@style/SwitchCompatTheme</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/bildirim</item>
    </style>

    <style name="txtLimit">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="txtBuyingSellingValues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="spinnerStyle">@style/MySpinner.Dark</item>
    </style>

    <style name="deneme">
        <item name="spinnerStyle">@style/MySpinner</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Spinner - Dropdown theme. -->
    <style name="MySpinner.Dark" parent="MySpinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!--calculate buttton -->
    <style name="MyButton">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>
</resources>
